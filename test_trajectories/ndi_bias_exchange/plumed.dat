r1: GROUP NDX_FILE=../index.ndx NDX_GROUP=res_1
r2: GROUP NDX_FILE=../index.ndx NDX_GROUP=res_2
rr: GROUP NDX_FILE=../index.ndx NDX_GROUP=res_12
na: GROUP NDX_FILE=../index.ndx NDX_GROUP=NA
b1: GROUP NDX_FILE=../index.ndx NDX_GROUP=bb_1
b2: GROUP NDX_FILE=../index.ndx NDX_GROUP=bb_2
bb: GROUP NDX_FILE=../index.ndx NDX_GROUP=bb_12
s1: GROUP NDX_FILE=../index.ndx NDX_GROUP=sc_1
s2: GROUP NDX_FILE=../index.ndx NDX_GROUP=sc_2
ss: GROUP NDX_FILE=../index.ndx NDX_GROUP=sc_12

CO1: CENTER ATOMS=b1
CO2: CENTER ATOMS=b2

D1: DISTANCE ATOMS=CO1,CO2
CM1: COORDINATION GROUPA=r1 GROUPB=r2 R_0=0.40 D_0=0
CM2: COORDINATION GROUPA=na GROUPB=bb R_0=0.40 D_0=0
CM3: COORDINATION GROUPA=na GROUPB=ss R_0=0.40 D_0=0

RANDOM_EXCHANGES

metad: METAD ...
	ARG=@replicas:D1,CM1,CM2,CM3
	PACE=200
	SIGMA=@replicas:0.3,4,0.5,0.5
	HEIGHT=1
	FILE=../HILLS
	BIASFACTOR=5
	GRID_MIN=-0.5
	GRID_MAX=@replicas:7,600,80,80
	TEMP=298
	CALC_RCT
...

PRINT STRIDE=200 ARG=D1,CM1,CM2,CM3,metad.* FILE=../COLVAR


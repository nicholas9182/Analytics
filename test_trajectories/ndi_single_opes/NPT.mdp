; Preprocessing
include			= -I../more.lib
define			= 

; Run control
integrator		= md
dt			= 0.002
nsteps		=	250000 
comm_mode		= linear
nstcomm			= 100
comm_grps		=

; OUTPUT CONTROL OPTIONS
nstxout                  = 1000
nstvout                  = 0
nstfout                  = 0
nstlog                   = 1000
nstcalcenergy            = 1000
nstenergy                = 1000
nstxout-compressed       = 100
compressed-x-precision   = 100
compressed-x-grps        = non-water 
energygrps               = 

; Bonds
constraints		= h-bonds
constraint_algorithm	= LINCS
continuation		= no
lincs_order		= 4
lincs_iter		= 1
lincs_warnangle		= 30
morse			= no

; Neighbour searching
cutoff-scheme		= Verlet
nstlist			= 40
ns_type			= grid
rlist			= 1

; Electrostatics
coulombtype		= PME
rcoulomb		= 1
epsilon_r		= 1	

; VdW
vdwtype			= PME
rvdw			= 1
DispCorr                = no

; Tables
table-extension          = 1

; Ewald
fourierspacing           = 0.12
fourier_nx               = 0
fourier_ny               = 0
fourier_nz               = 0
pme_order                = 4
ewald_rtol               = 1e-05
;ewald_geometry           = 3d
epsilon_surface          = 0
optimize_fft             = no

; Pressure coupling
pcoupl			= c-rescale
pcoupltype		= isotropic
tau_p			= 1
compressibility		= 4.5e-5
ref_p			= 1
refcoord_scaling	= com

; Temperature coupling
tcoupl			= v-rescale
tc_grps			= system
tau_t			= 0.1
ref_t			= 298

; Velocity generation
gen_vel			= yes
gen_temp		= 298
gen_seed		= -1

; Periodic boundary conditions
pbc			= xyz
